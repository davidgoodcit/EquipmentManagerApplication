<div class="panel panel-default" >
  <div class="panel-heading">
    <h3 class="panel-title">Current Equipment</h3>
  </div>
  <div class="panel-body">
  	<a class = "btn btn-primary" href="equips/add">Add New Equipment</a>
    <div class='row'>
		{{#each equips}}
          <div class="col-md-4">
          	<h4>{{this.name}}</h4>
          	<img class="thumbnail" src="{{this.img_url}}" width='200px'>
          	<a class = "btn btn-primary" href="equips/details/{{this.id}}">View Details</a>
          </div>
		{{/each}}
    </div>
  </div>
</div>